<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="28dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/adapter_students_student_id_text_view"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center"
            android:text=""
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="96dp"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="1"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="18sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:gravity="center">

                    <CheckBox
                        android:id="@+id/adapter_students_checkbox0"
                        android:layout_width="wrap_content"
                        android:layout_height="56dp"
                        android:gravity="center"
                        android:clickable="false" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="96dp"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="2"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="18sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:gravity="center">

                    <CheckBox
                        android:id="@+id/adapter_students_checkbox1"
                        android:layout_width="wrap_content"
                        android:layout_height="56dp"
                        android:gravity="center"
                        android:clickable="false" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="96dp"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="3"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="18sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:gravity="center">

                    <CheckBox
                        android:id="@+id/adapter_students_checkbox2"
                        android:layout_width="wrap_content"
                        android:layout_height="56dp"
                        android:gravity="center"
                        android:clickable="false" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="96dp"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="4"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="18sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:gravity="center">

                    <CheckBox
                        android:id="@+id/adapter_students_checkbox3"
                        android:layout_width="wrap_content"
                        android:layout_height="56dp"
                        android:gravity="center"
                        android:clickable="false" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="96dp"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="5"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="18sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:gravity="center">

                    <CheckBox
                        android:id="@+id/adapter_students_checkbox4"
                        android:layout_width="wrap_content"
                        android:layout_height="56dp"
                        android:gravity="center"
                        android:clickable="false" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="96dp"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="6"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="18sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:gravity="center">

                    <CheckBox
                        android:id="@+id/adapter_students_checkbox5"
                        android:layout_width="wrap_content"
                        android:layout_height="56dp"
                        android:gravity="center"
                        android:clickable="false" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="96dp"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="7"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="18sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:gravity="center">

                    <CheckBox
                        android:id="@+id/adapter_students_checkbox6"
                        android:layout_width="wrap_content"
                        android:layout_height="56dp"
                        android:gravity="center"
                        android:clickable="false" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>